            },
            {
                id: 3,
                name: "MT3 Susuwatari",
                material: "PBT пластик",
                price: "399,000 UZS",
                image: "https://images.unsplash.com/photo-1615663245857-ac93bb7c39e7?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80",
                features: ["PBT", "Сферический профиль", "Двойное литье", "Светопроницаемость"]
            },
            {
                id: 4,
                name: "Akko Neon",
                material: "PBT пластик",
                price: "279,000 UZS",
                image: "https://images.unsplash.com/photo-1587829741301-dc798b83add3?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80",
                features: ["PBT", "Ретро стиль", "Полный набор", "Совместимость со всеми свитчами"]
            },
            {
                id: 5,
                name: "DSA Scientific",
                material: "ABS пластик",
                price: "329,000 UZS",
                image: "https://images.unsplash.com/photo-1629654291660-3c98113a0435?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80",
                features: ["ABS", "Униформа профиль", "Химическая гравировка", "Минимализм"]
            },
            {
                id: 6,
                name: "SA Pulse",
                material: "PBT пластик",
                price: "489,000 UZS",
                image: "https://images.unsplash.com/photo-1591799264318-7e6ef8ddb7ea?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80",
                features: ["PBT", "Высокий профиль", "Ретро дизайн", "Светящиеся символы"]
            }
        ];

        // Загрузка кейкапов
        document.addEventListener('DOMContentLoaded', function() {
            const grid = document.getElementById('keycapsGrid');
            const comingSoon = document.getElementById('comingSoon');
            
            if (keycaps.length === 0) {
                comingSoon.style.display = 'block';
                grid.style.display = 'none';
                return;
            }
            
            keycaps.forEach(keycap => {
                const card = document.createElement('div');
                card.className = 'keycap-card';
                card.innerHTML = `
                    <img src="${keycap.image}" alt="${keycap.name}" class="keycap-image">
                    <div class="keycap-info">
                        <h3 class="keycap-title">${keycap.name}</h3>
                        <div class="keycap-material">${keycap.material}</div>
                        <div class="keycap-price">${keycap.price}</div>
                        <div class="keycap-features">
                            ${keycap.features.map(feature => 
                                `<span class="feature-tag">${feature}</span>`
                            ).join('')}
                        </div>
                    </div>
                `;
                grid.appendChild(card);
            });
        });
    </script>
