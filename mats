                image: "https://images.unsplash.com/photo-1591370874773-6702e8f12fd8?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=60",
                features: ["Резиновая основа", "Водоотталкивающая", "Сшитые края", "Логотип ROG"]
            },
            {
                id: 6,
                name: "Corsair MM700",
                size: "XL 930×400×3mm",
                price: "389,000 UZS",
                image: "https://images.unsplash.com/photo-1591798792955-6b0468c9f5a7?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=60",
                features: ["RGB подсветка", "Микротекстурированная", "USB хабы", "Совместимость с iCUE"]
            }
        ];

        // Загрузка ковриков
        document.addEventListener('DOMContentLoaded', function() {
            const grid = document.getElementById('matsGrid');
            const comingSoon = document.getElementById('comingSoon');
            
            if (mats.length === 0) {
                comingSoon.style.display = 'block';
                grid.style.display = 'none';
                return;
            }
            
            mats.forEach(mat => {
                const card = document.createElement('div');
                card.className = 'mat-card';
                card.innerHTML = `
                    <img src="${mat.image}" alt="${mat.name}" class="mat-image">
                    <div class="mat-info">
                        <h3 class="mat-title">${mat.name}</h3>
                        <div class="mat-size">${mat.size}</div>
                        <div class="mat-price">${mat.price}</div>
                        <div class="size-selector">
                            <button class="size-btn">S</button>
                            <button class="size-btn">M</button>
                            <button class="size-btn">L</button>
                            <button class="size-btn">XL</button>
                        </div>
                        <div class="mat-features">
                            ${mat.features.map(feature => 
                                `<span class="feature-tag">${feature}</span>`
                            ).join('')}
                        </div>
                    </div>
                `;
                grid.appendChild(card);
            });
        });
    </script>
